<% if current_user%>
  Welcome <%=current_user.name%>
  <br>
  <%= form_for @post do |form| %>
    <%= form.label :message %>
    <%= form.text_area :message, placeholder: "What's on your mind?" %>
    <%= form.hidden_field :wall_id, value: 0 %>

    <%= form.submit "Submit" %>
  <% end %>
<%end%>


<ul>
<%if @posts%>
  <% @posts.each do |post| %>
