Welcome <%=current_user.name%>
  <br>
  <%= form_for @post do |form| %>
    <%= form.label :message %>
    <%= form.text_area :message, placeholder: "What's on your mind?" %>
    <%= form.hidden_field :wall_id, value: 0 %>

    <%= form.submit "Submit" %>
  <% end %>


<ul>
<%if @posts%>
  <% @posts.each do |post| %>
    <p>â€©<%=post.created_at.strftime("%d %b %Y at %k:%M") %><br><%= simple_format(post.message) %><%= post.user.name %></p>
    <%if !post.comments.empty?%>
      <h4>Comments</h4>
      <% post.comments.each do |comment|%>
        <%=comment.user.name%> - <%=comment.body%>
        <%= form_for @comment, url: url_for(controller: 'comments', action: 'create') do |form| %>
          <%= form.text_area :body %>

          <%= form.hidden_field :post_id, value: post.id %>
          <%= form.submit  %>
        <% end %>
      <%end%>
    <%end%>

      <%= link_to "Edit Post", edit_post_path(post) %>
      <%= link_to "Delete Post", post_path(post), :method => :delete %>
      <br>
      <% end %>
    <%end%>
