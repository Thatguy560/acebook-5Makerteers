<% if current_user%>
  Welcome <%=current_user.name%>
    <br>
    <%= link_to "New Post", new_post_path %>
    <br>
    <%= link_to "Logout", destroy_user_session_path, :method => :delete %>
    <br>
<%else%>
    <%= link_to "Sign Up!", new_user_registration_path %>
    <br>
    <%= link_to "Log In", new_user_session_path %>
    <br>
<%end%>

<h2><%= @user.name %>'s Wall</h2>

<%= form_for @post, url: url_for(controller: 'posts', action: 'create') do |form| %>
  <%= form.label :message %>
  <%= form.text_area :message %>
  <%= form.hidden_field :wall_id, value: params[:id] %>

  <%= form.submit "Post to #{@user.name}'s wall" %>
<% end %>

<!--
<%= link_to "Post to #{@user.name}'s wall", new_post_path(:wall_id => @user.id) %>
-->

<% @posts.each do |post| %>
  <p>â€©<%=post.created_at.strftime("%d %b %Y at %k:%M") %><br><%= simple_format(post.message) %><%= post.user.name %></p>
  <%= link_to "Edit Post", edit_post_path(post) %>
  <%= link_to "Delete Post", post_path(post), :method => :delete %>
<% end %>
